{
  "manifest_version": 2,
  "description": "Testing",
  "name": "testing",
  "version": "0.1",
  "homepage_url": "https://github.com/",

  "browser_action": {
    "default_icon": "icons/page-32.png"
  },

  "permissions": [
    "activeTab",
    "tabs",
    "storage"
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "testing@testing.org",
      "strict_min_version": "60.0b5"
    }
  },
  "commands": {
    "toggle-chupmu": {
      "suggested_key": { "default": "Ctrl+Shift+U" },
      "description": "Send a 'toggle-chupmu' event to the extension"
    }
  },
  "background": {
    "scripts": ["params.js", "helpers.js", "db.js", "background.js"]
  },
  "content_scripts": [
    {
      "matches": ["https://voz.vn/t/*"],
      "js": ["content-script.js"]
    }
  ],
  "options_ui": {
    "page": "options.html",
    "browser_style": true
  },
  "page_action": {
    "default_icon": "icons/off.svg",
    "browser_style": true
  }
}
